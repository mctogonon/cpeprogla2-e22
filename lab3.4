#include<iostream>
#include<cstring>

using namespace std;

main(){
    char pal[20];
    int t, len;
    int goal = 0;
    
  cout <<"************************"<<endl;
	cout <<"PALINDROME"<<endl;
	cout <<"************************"<<endl;
    
    cout<<endl;
    cout << "Enter a string: ";
    cin >> pal;
    
    len = strlen(pal);
    
    for(t=0; t < len ;t++){
        if(pal[t] != pal[len-t-1]){
            goal = 1;
            break;
	   }
	}
    
    if (goal) {
        cout << endl << pal << " is not a palindrome" << endl; 
    }    
    else {
        cout <<endl << pal << " is a palindrome" << endl; 
    }
}
